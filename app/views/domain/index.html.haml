      %thead
        %tr
          %th.header.domain Domain
          %th.header.da UDA
          %th.header.pda PDA
          %th.header.date Date Added
          %th.header.options Options
          %th.header.cloud Anchor Cloud
      %tfoot
        %tr.search-row
          %td.header.domain
            %input.search-box{ placeholder: 'Search this column', type: 'text' }
