
- content_for :css do
  = stylesheet_link_tag 'domain/index'

- content_for :js_footer do
  = javascript_include_tag 'domain/index'

  :javascript
    $(document).ready(function() {
      window.listControl = new DomainList();
    });

.container.page-container
  %h2.page-header.index-header Available and Checked Domains (1356)

  .actions-area
    %a.btn.btn-danger Download CSV
    %a.btn.btn-success Clear Domains

  .content-area
