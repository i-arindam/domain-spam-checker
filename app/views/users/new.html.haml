- content_for :stylesheet do
  = stylesheet_link_tag 'new'

.container.page-container
  .jumbotron
    %h1.page-message Signup for new account
    %form{method: 'post', action: '/users'}
      %input.form-control.input-lg{type: 'text', name: 'user[name]', placeholder: 'Name'}
      %input.form-control.input-lg{type: 'email', name: 'user[email]', placeholder: 'Email'}
      %input.form-control.input-lg{type: 'password', name: 'user[password]', placeholder: 'Password'}
      %input.form-control.input-lg{type: 'password', name: 'user[password_confirmation]', placeholder: 'Password Confirmation'}
      %input{ name: "authenticity_token", type: 'hidden', value: form_authenticity_token }
      %button.btn.btn-success.btn-block.btn-lg{type: 'submit'} Signup
